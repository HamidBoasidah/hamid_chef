{
  "info": {
    "name": "Conversations API",
    "_postman_id": "c1b2f7a2-1a34-4b44-9f80-123456789abc",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Moon Chef - Conversations & Messaging API testing collection. Use login to obtain a bearer token, then exercise conversation and message endpoints."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "token", "value": "" },
    { "key": "perPage", "value": "20" },
    { "key": "chefId", "value": "1" },
    { "key": "conversationId", "value": "" },
    { "key": "messageId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (get token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test.user@example.com\",\n  \"password\": \"password\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const token = json?.data?.token;",
                  "if (token) { pm.collectionVariables.set('token', token); }",
                  "const userId = json?.data?.user?.id;",
                  "if (userId) { pm.collectionVariables.set('userId', userId.toString()); }",
                  "pm.test('Login succeeded', () => { pm.expect(!!token).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login with phone (get token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"500000000\",\n  \"password\": \"password\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const token = json?.data?.token;",
                  "if (token) { pm.collectionVariables.set('token', token); }",
                  "const userId = json?.data?.user?.id;",
                  "if (userId) { pm.collectionVariables.set('userId', userId.toString()); }",
                  "pm.test('Phone login succeeded', () => { pm.expect(!!token).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Me (verify token)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations?per_page={{perPage}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations"],
              "query": [
                { "key": "per_page", "value": "{{perPage}}" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const list = json?.data || [];",
                  "if (Array.isArray(list) && list.length) { pm.collectionVariables.set('conversationId', String(list[0].id)); }",
                  "pm.test('Fetched conversations', () => { pm.expect(Array.isArray(list)).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Chef: Start/Ensure Conversation (with user)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/chef/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chef", "conversations"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "user_id", "value": "{{userId}}", "type": "text" },
                { "key": "content", "value": "مرحبا عميلنا العزيز!", "type": "text" },
                { "key": "attachment", "type": "file" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const conv = json?.data;",
                  "if (conv?.id) { pm.collectionVariables.set('conversationId', String(conv.id)); }",
                  "pm.test('Chef ensured conversation', () => { pm.expect(!!conv?.id).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Start/Ensure Conversation (optional first message)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "chef_id", "value": "{{chefId}}", "type": "text" },
                { "key": "content", "value": "مرحبا!", "type": "text" },
                { "key": "attachment", "type": "file" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const conv = json?.data;",
                  "if (conv?.id) { pm.collectionVariables.set('conversationId', String(conv.id)); }",
                  "pm.test('Conversation ensured', () => { pm.expect(!!conv?.id).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Messages",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/messages?per_page={{perPage}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}", "messages"],
              "query": [
                { "key": "per_page", "value": "{{perPage}}" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const list = json?.data || [];",
                  "if (Array.isArray(list) && list.length) { pm.collectionVariables.set('messageId', String(list[0].id)); }",
                  "pm.test('Fetched messages', () => { pm.expect(Array.isArray(list)).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Send Message (text or file)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}", "messages"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "content", "value": "رسالة اختبار", "type": "text" },
                { "key": "attachment", "type": "file" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const msg = json?.data;",
                  "if (msg?.id) { pm.collectionVariables.set('messageId', String(msg.id)); }",
                  "pm.test('Message sent', () => { pm.expect(!!msg?.id).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Download Attachment",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/messages/{{messageId}}/attachment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}", "messages", "{{messageId}}", "attachment"]
            }
          }
        },
        {
          "name": "Mark As Read",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}/read",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}", "read"]
            }
          }
        }
      ]
    }
  ]
}
