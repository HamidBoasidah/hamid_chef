{
  "info": {
    "name": "Chef Vacations API",
    "_postman_id": "f3c2a7e0-9876-4c1a-a1b2-abcdef654321",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Moon Chef - Manage chef vacation dates (API only)."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "token", "value": "" },
    { "key": "vacationId", "value": "" },
    { "key": "month", "value": "11-2025" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (get token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/login", "host": ["{{baseUrl}}"], "path": ["api", "login"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"test.chef@example.com\",\n  \"password\": \"password\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const token = json?.data?.token;",
                  "if (token) pm.collectionVariables.set('token', token);",
                  "pm.test('Login ok', () => pm.expect(!!token).to.be.true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Vacations",
      "item": [
        {
          "name": "List Vacations",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/vacations", "host": ["{{baseUrl}}"], "path": ["api","chef","vacations"] }
          }
        },
        {
          "name": "List Vacations (Monthly)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/chef/vacations/monthly",
              "host": ["{{baseUrl}}"],
              "path": ["api","chef","vacations","monthly"],
              "query": [
                { "key": "month", "value": "", "disabled": false }
              ]
            }
          },
          "event": []
        },
        {
          "name": "Create Vacation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/vacations", "host": ["{{baseUrl}}"], "path": ["api","chef","vacations"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "date", "value": "2026-01-05", "type": "text" },
                { "key": "note", "value": "إجازة شخصية", "type": "text" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const id = json?.data?.id;",
                  "if (id) pm.collectionVariables.set('vacationId', String(id));",
                  "pm.test('Created vacation', () => pm.expect(!!id).to.be.true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Show Vacation",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/vacations/{{vacationId}}", "host": ["{{baseUrl}}"], "path": ["api","chef","vacations","{{vacationId}}"] }
          }
        },
        {
          "name": "Update Vacation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/vacations/{{vacationId}}", "host": ["{{baseUrl}}"], "path": ["api","chef","vacations","{{vacationId}}"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "_method", "value": "PUT", "type": "text" },
                { "key": "note", "value": "تعديل الملاحظة", "type": "text" }
              ]
            }
          }
        },
        {
          "name": "Delete Vacation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/vacations/{{vacationId}}", "host": ["{{baseUrl}}"], "path": ["api","chef","vacations","{{vacationId}}"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "_method", "value": "DELETE", "type": "text" }
              ]
            }
          }
        }
      ]
    }
  ]
}
