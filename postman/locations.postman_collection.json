{
  "info": {
    "name": "Locations API",
    "_postman_id": "locations-collection-001",
    "description": "Collection to test governorates, districts, and areas endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Governorates",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/locations/governorates",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "locations",
            "governorates"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Response is JSON array', function () {",
              "  var json = pm.response.json();",
              "  pm.expect(Array.isArray(json.data || json)).to.be.true;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Districts by Governorate",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/locations/governorates/{{governorate_id}}/districts",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "locations",
            "governorates",
            "{{governorate_id}}",
            "districts"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 404 if not found', function () {",
              "  pm.expect([200,404]).to.include(pm.response.code);",
              "});",
              "pm.test('If 200, body contains array', function () {",
              "  if (pm.response.code === 200) {",
              "    var json = pm.response.json();",
              "    pm.expect(Array.isArray(json.data || json)).to.be.true;",
              "  }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Areas by District",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/locations/districts/{{district_id}}/areas",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "locations",
            "districts",
            "{{district_id}}",
            "areas"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 404 if not found', function () {",
              "  pm.expect([200,404]).to.include(pm.response.code);",
              "});",
              "pm.test('If 200, body contains array', function () {",
              "  if (pm.response.code === 200) {",
              "    var json = pm.response.json();",
              "    pm.expect(Array.isArray(json.data || json)).to.be.true;",
              "  }",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "governorate_id",
      "value": "1"
    },
    {
      "key": "district_id",
      "value": "1"
    }
  ]
}
