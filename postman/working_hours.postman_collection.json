{
  "info": {
    "name": "Chef Working Hours API",
    "_postman_id": "d2a1b8dc-1c3c-4b69-9bbd-abcdef123456",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Moon Chef - Manage chef weekly working hours (API only)."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "token", "value": "" },
    { "key": "perPage", "value": "20" },
    { "key": "userId", "value": "" },
    { "key": "workingHourId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (get token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/login", "host": ["{{baseUrl}}"], "path": ["api", "login"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"test.chef@example.com\",\n  \"password\": \"password\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const token = json?.data?.token;",
                  "if (token) pm.collectionVariables.set('token', token);",
                  "const userId = json?.data?.user?.id;",
                  "if (userId) pm.collectionVariables.set('userId', String(userId));",
                  "pm.test('Login ok', () => pm.expect(!!token).to.be.true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Working Hours",
      "item": [
        {
          "name": "Get My Working Hours",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/working-hours", "host": ["{{baseUrl}}"], "path": ["api","chef","working-hours"] }
          }
        },
        {
          "name": "Create Working Hour",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/working-hours", "host": ["{{baseUrl}}"], "path": ["api","chef","working-hours"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "day_of_week", "value": "6", "type": "text" },
                { "key": "start_time", "value": "09:00", "type": "text" },
                { "key": "end_time", "value": "13:00", "type": "text" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const id = json?.data?.id;",
                  "if (id) pm.collectionVariables.set('workingHourId', String(id));",
                  "pm.test('Created working hour', () => pm.expect(!!id).to.be.true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Working Hour",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/working-hours/{{workingHourId}}", "host": ["{{baseUrl}}"], "path": ["api","chef","working-hours","{{workingHourId}}"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "_method", "value": "PUT", "type": "text" },
                { "key": "start_time", "value": "16:00", "type": "text" },
                { "key": "end_time", "value": "20:00", "type": "text" }
              ]
            }
          }
        },
        {
          "name": "Delete Working Hour",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/chef/working-hours/{{workingHourId}}", "host": ["{{baseUrl}}"], "path": ["api","chef","working-hours","{{workingHourId}}"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "_method", "value": "DELETE", "type": "text" }
              ]
            }
          }
        }
      ]
    }
  ]
}
